<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            >

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="TextView" />

            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="Synopsis" />

    <EditText
        android:id="@+id/et_Synopsis"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
        android:hint="Synopsis"
        />

            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="Projects Taken" />


            <EditText
        android:id="@+id/et_Projects_Taken"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Projects Taken"
                />

            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="Educational Qualification" />

    <EditText
        android:id="@+id/et_Educational_Qualification"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Educational Qualification" />

            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="Family History" />

    <EditText
        android:id="@+id/et_Family_History"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Family History" />
            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="Politician Rating" />


            <EditText
        android:id="@+id/et_Politician_Rating"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Politician Rating" />



            <Button
                android:id="@+id/bt_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Submit" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>